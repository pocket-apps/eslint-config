{
  "name": "@pocket-apps/eslint-config",
  "version": "3.0.0",
  "repository": "git://github.com/pocket-apps/eslint-config.git",
  "license": "MIT",
  "author": "papeloto <vn4varro@gmail.com>",
  "main": "index.js",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|json|yml|md)": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "eslint"
    ]
  },
  "prettier": "@pocket-apps/prettier-config",
  "eslintConfig": {
    "extends": "./index.js"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-jest-dom": "3.2.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-replace-relative-imports": "1.0.0",
    "eslint-plugin-testing-library": "3.10.0",
    "eslint-plugin-unused-imports": "1.0.0"
  },
  "devDependencies": {
    "@pocket-apps/prettier-config": "2.0.0",
    "eslint": "7.28.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "typescript": "4.0.5"
  },
  "peerDependencies": {
    "eslint": "^7.2.0",
    "prettier": "^2.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
